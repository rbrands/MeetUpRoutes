    {
      "route": "/api/GetUser",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/GetArticle/*",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/GetVersion",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/GetRoutes",
      "allowedRoles": [ "anonymous" ]
    },
    {
      "route": "/api/WriteComment",
